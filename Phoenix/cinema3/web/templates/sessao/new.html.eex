<h1>Login</h1>
<%= form_for @conn, sessao_path(@conn, :create), [as: :sessao], fn f -> %>
    <div class="form-group">
        <%= text_input f, :username, placeholder: "Username", class: "form-control"%>
    </div>
    <div class="form-group">
        <%= password_input f, :senha, placeholder: "Senha", class: "form-control"%>
    </div>
    <%= submit "Log in", class: "btn btn-primary"%>
    <%= link "Voltar", to: page_path(@conn, :index), class: "btn btn-default"%>
<% end %>